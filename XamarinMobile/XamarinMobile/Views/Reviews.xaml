        <Label x:Name="usname"/>
        <Label Text="Active Jobs" TextColor="#334357" FontSize="24" VerticalOptions="Center" HorizontalOptions="CenterAndExpand"/>
        <ListView ItemsSource="{Binding GetJobs}"
